<style>
  .navbar.fixed-top {
    position: sticky;
    top: 0;
    background-color: #ffffff; /* Add a background color to ensure the navbar is visible */
    z-index: 1000;
  }
  .navbar-collapse {
    background-color: #f8f9fa; /* Set background color for collapsed navbar */
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    width: 75%; /* Set the width of the collapsed navbar */
    max-width: 300px; /* Limit the maximum width */
    padding: 0; /* Remove default padding */
    transform: translateX(
      100%
    ); /* Initially translate the navbar out of the viewport */
    transition: transform 0.3s ease-in-out; /* Add a transition for smooth animation */
  }
  .navbar-collapse.show {
    transform: translateX(
      0
    ); /* Translate the navbar back into the viewport when toggled */
  }
  .navbar-toggler {
    border: none; /* Remove border from toggler */
  }
  .navbar-nav {
    width: 100%; /* Ensure navbar-nav covers full width */
    padding: 1rem;
  }
  .nav-link {
    margin: 0.5rem 0;
  }
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .btn-search:hover {
    background-color: #d12b3b;
    color: #fff;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-btn {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
  }
  @media (min-width: 768px) {
    .navbar-collapse {
      position: static;
      transform: none;
      width: auto;
      max-width: none;
      background-color: transparent;
      height: auto;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-btn"
            type="search"
            placeholder="Search destinations"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-sharp fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Rent Your Place</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
